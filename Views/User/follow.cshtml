@model IEnumerable<Social_website.Models.users>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Username)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProfilePicture)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.followers)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Bio)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
       
        <td>
            <a href="/user/index/@item.userName_id" style="text-decoration: none">@Html.DisplayFor(modelItem => item.Username)</a>
        </td>
       
      
        <td>
           <img src="~/attach/@item.ProfilePicture" style="max-block-size: 2rem" />
       
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.followers)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Bio)
        </td>
        <td>
            @Html.ActionLink("Unfollow", "removeFollow", new { id=item.userName_id })
        </td>
    </tr>
}

</table>
