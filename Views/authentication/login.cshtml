@model Social_website.Models.users
@{
    ViewBag.Title = "SignUp";
}




<h2>Log In</h2>
@Html.ValidationSummary()
<form class="text-center" action="/authentication/login" method="post">

    <br />
    <div class="row form-group">
        <div class="col-md-3">
            <label>email</label>
        </div>
        <div class="col-md-4">
            @Html.TextBoxFor(n => n.Email, new { @class = "form-control" })
        </div>
        <div class="col-md-3">
            @Html.ValidationMessageFor(n => n.Email)
        </div>
    </div>
    <br />
    <br />
    <div class="row form-group">
        <div class="col-md-3">
            <label>password</label>
        </div>
        <div class="col-md-4">
            @Html.PasswordFor(n => n.Password, new { @class = "form-control" })
        </div>
        <div class="col-md-3">
            @Html.ValidationMessageFor(n => n.Password)
        </div>
    </div>
    <br />
    <br />
    <input type="submit" value="Log In" class="btn btn-outline-primary" />

</form>



@section scripts {
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}
